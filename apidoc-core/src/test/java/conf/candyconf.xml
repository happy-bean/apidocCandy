<?xml version="1.0" encoding="UTF-8" ?>

<candyConfiguration>
    <!-- 引入配置文件 -->
    <properties resource="candy.properties"/>

    <!--jdbc配置-->
    <jdbcConnection>
        <driver>
            <classPath>${classPath}</classPath>
            <driverClass>${jdbc_driver}</driverClass>
        </driver>
        <connectionURL>${jdbc_url}</connectionURL>
        <userId>${jdbc_user}</userId>
        <password>${jdbc_password}</password>
    </jdbcConnection>

    <tables>
        <table tableName="api">
            <column value="id" property="id"/>
            <column value="name" property="name"/>
            <column value="path" property="path"/>
            <column value="method" property="method"/>
            <column value="headers" property="headers"/>
            <column value="desc" property="desc"/>
            <column value="param" property="param"/>
            <column value="result" property="result"/>
        </table>
    </tables>

    <javaSource projectCodePath="org.cj.dao.auto">
        <apiSource package="/opt/"/>
    </javaSource>

    <apiContext id="infoGuardian">

        <!-- 类型转换 -->
        <javaTypeResolver>
            <property javaType="int" apiType="number"/>
        </javaTypeResolver>

    </apiContext>

</candyConfiguration>

